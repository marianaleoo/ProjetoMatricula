@model ProjetoMatricula.Model.Disciplina

@{
    ViewBag.Title = "DeleteDisciplina";
}
<input type="hidden" id="idDisciplina" value="@ViewBag.Id">
<h2>Deletar Disciplina</h2>

<h3>Tem certeza que deseja deletar?</h3>
<div>
    <h4>Disciplina</h4>
    <table class="table">
        <tr>
            <th>
                Disciplina
            </th>
            <th>
                Curso
            </th>
        </tr>
        <tr>
            <td>
                @Model.GetNome()
            </td>
            <td>
                @Model.GetCurso().GetNome()
            </td>
        </tr>
    </table>
    <hr />
    <dl class="dl-horizontal">
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @*<button type="button" class="btn btn-primary" id="btnDeletar">Deletar</button>*@
            @*<input type="submit" value="Delete" class="btn btn-default" /> |*@
            @Html.ActionLink("Deletar", "ExcluirDisciplina", new { id = Model.GetId() }) |
            @Html.ActionLink("Back to List", "IndexDisciplina")
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/app/deleteDisciplina.js")
}
