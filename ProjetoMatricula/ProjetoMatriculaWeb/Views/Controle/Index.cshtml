@model IEnumerable<ProjetoMatricula.Model.Aluno>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Alunos</h2>

<p>
    @Html.ActionLink("Novo Aluno", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nome
        </th>
        <th>
            RA
        </th>
        <th>
            Curso
        </th>
        <th>
            Modelo
        </th>
        <th>
            TipoCurso
        </th>
        <th>
            Data Nascimento
        </th>
        <th>
            Data Cadastro
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @item.GetNome()
    </td>
    <td>
        @item.GetRa()
    </td>
    <td>
        @item.GetCurso().GetNome()
    </td>
    <td>
        @item.GetCurso().GetModeloCurso()
    </td>
    <td>
        @item.GetCurso().GetTipoCurso().GetDescricao()
    </td>
    <td>
        @item.GetDataNascimento()
    </td>
    <td>
        @item.GetDataCadastro()
    </td>
    <td>
        <select>
            @foreach (var aluno in Model)
            {
                <option value="@aluno.GetId()">@aluno.GetNome()</option>
            }
            </select>
    </td>
     <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.GetId() }) |
            @Html.ActionLink("Detalhes", "Details", new { id = item.GetId() })
     </td>
</tr>
    }

</table>