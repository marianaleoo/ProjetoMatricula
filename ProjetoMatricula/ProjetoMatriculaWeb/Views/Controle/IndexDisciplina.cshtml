@model IEnumerable<ProjetoMatricula.Model.Disciplina>

@{
    ViewBag.Title = "IndexDisciplina";
}

<h2>Lista Disciplina</h2>

<p>
    @Html.ActionLink("Nova Disciplina", "CreateDisciplina")
</p>
<table class="table">
    <tr>
        <th>
            Disciplina
        </th>
        <th>
            Curso
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @item.GetNome()
    </td>
    <td>
        @item.GetCurso().GetNome()
    </td>
    <td>
        @Html.ActionLink("Editar", "EditDisciplina", new { id=item.GetId()  }) |        
        @Html.ActionLink("Deletar", "DeleteDisciplina", new {  id=item.GetId()  })
    </td>
</tr>
}

</table>
