@model ProjetoMatricula.Model.Curso

@{
    ViewBag.Title = "DeleteCurso";
}

<input type="hidden" id="idDisciplina" value="@ViewBag.Id">
<h2>Deletar Curso</h2>

<h3>Tem certeza que deseja deletar?</h3>
<div>
    <h4>Curso</h4>
    <table class="table">
        <tr>
            <th>
                Nome
            </th>
            <th>
                Modelo
            </th>
        </tr>
        <tr>
            <td>
                @Model.GetNome()
            </td>
            <td>
                @Model.GetModeloCurso()
            </td>
        </tr>
    </table>
    <hr />
    <dl class="dl-horizontal">
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Deletar", "ExcluirCurso", new { id = Model.GetId() }) |
            @Html.ActionLink("Back to List", "IndexCurso")
        </div>
    }
</div>
